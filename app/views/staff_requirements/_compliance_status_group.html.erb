<%collection.each do |ou,statuses|%>
    <tr id="tr_<%=ou%>" data-ou-id="<%=ou%>" data-parent-id="<%=parent_id%>">
      <td>
        <span style="margin-left:<%=depth * 10%>px">
            <a id="toggler_<%=ou%>" data-ou-type="<%= collection.name.to_s.split("_")[0]%>" data-ou-id="<%=ou%>" href="#toggle-children"><%=image_tag("plus-white.png", :id=>"toggle-#{ou}-image")%></a>
          <%=@names[BSON::ObjectID(ou)]%>
        </span>
      </td>
      <td><%=number_to_percentage(statuses.measure_values.compliance_pct * 100, :precision=>0)%></td>
      <td>

        <%statuses.each do |status|%>
            <%unless status.compliance_status == 'current'%>
            <span class="ui-corner-all score-small requirement-status <%=status.compliance_status%>" style="width:100%;">
              <%=status.total.to_i%>
            </span>
            <%end%>
        <%end%>
      
      </td>
    </tr>
<%end%>
